<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin page{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}"/>
    <script src="{{ asset('libs/imask/imask.js') }}"></script>
    {{ component('format_number') }}
{#    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>#}
    {% block head %}
    {% endblock %}
</head>
<body class="width-100 font-gotham">
{% if app.user %}
    <header class="header bg-black white font-gotham z3 bt-0 width-100">
        <ul class="list-style-unset m-0 pb-3 pt-3 width-100 flex-j-center" >
            {% if app.user %}
                <li class="nav-item dropdown">
                    <a class="fs-15" href="{{ path('app_logout') }}">Выйти из учетной записи</a>
                </li>
            {% endif %}
            <li class="nav-item dropdown">
                <a class="fs-15" href="{{ path('index') }}">Вернуться на сайт</a>
            </li>
            <li onclick="openTab(this)" class="nav-item dropdown">
                <a class="fs-15" href="#">Машины</a>
                <ul class="dropdown-menu mt-2">
                    <li><a class="dropdown-item" href="{{ path('app_car_index') }}">Список</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_car_new') }}">Добавить</a></li>
                    <li><a class="dropdown-item" href="{{ path('upload_car_page') }}">Импорт из xlsx</a></li>
                </ul>
            </li>
            <li onclick="openTab(this)" class="nav-item dropdown">
                <a class="fs-15" href="#">Марки</a>
                <ul class="dropdown-menu mt-2">
                    <li><a class="dropdown-item" href="{{ path('app_stamp_index') }}">Список</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_stamp_new') }}">Добавить</a></li>
                </ul>
            </li>
            <li onclick="openTab(this)" class="nav-item dropdown">
                <a class="fs-15" href="#">Страны</a>
                <ul class="dropdown-menu mt-2">
                    <li><a class="dropdown-item" href="{{ path('app_country_index') }}">Список</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_country_new') }}">Добавить</a></li>
                </ul>
            </li>
            <li onclick="openTab(this)" class="nav-item dropdown">
                <a class="fs-15" href="#">Модель</a>
                <ul class="dropdown-menu mt-2">
                    <li><a class="dropdown-item" href="{{ path('app_model_index') }}">Список</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_model_new') }}">Добавить</a></li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="fs-15" href="{{ path('app_settings_index') }}">Настройки</a>
            </li>
        </ul>
    </header>
{% endif %}
<div class="width-75 margin-auto mt-4">
    {% block body %}{% endblock %}
</div>
<script>
    function openTab(el) {
        let display = el.children[el.children.length - 1].style.display
        el.children[el.children.length - 1].style.display = display === "block" ? "" : "block"
    }
    document.addEventListener('DOMContentLoaded', () => {
        formatAllNumber();
    })
</script>
</body>
</html>
