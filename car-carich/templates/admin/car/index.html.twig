{% extends 'admin/base.html.twig' %}

{% block title %}Список машин{% endblock %}

{% block body %}
    <h1>Список машин</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Тип двигателя</th>
                <th>Год выпуска</th>
                <th>Цена полной комплектации</th>
                <th>Марка</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.name }}</td>
                <td>{{ car.typeEngine }}</td>
                <td>{{ car.year }}</td>
                <td class="number">{{ car.fullPrice }}</td>
                <td>{{ car.stamp }}</td>
                <td>
                    <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-light">Посмотреть</a>
                    <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-light">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Не найдено машин</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_car_new') }}" class="btn btn-black">Создать</a>
{% endblock %}
