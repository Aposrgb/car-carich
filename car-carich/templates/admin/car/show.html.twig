{% extends 'admin/base.html.twig' %}

{% block title %}Машина{% endblock %}

{% block body %}
    <h1>Машина {{ car.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Тип двигателя</th>
                <td>{{ car.typeEngine }}</td>
            </tr>
            <tr>
                <th>Вес</th>
                <td>{{ car.weight }}</td>
            </tr>
            <tr>
                <th>Габариты</th>
                <td>{{ car.size }}</td>
            </tr>
            <tr>
                <th>Год выпуска</th>
                <td>{{ car.year }}</td>
            </tr>
            <tr>
                <th>Баттарея</th>
                <td>{{ car.battery }}</td>
            </tr>
            <tr>
                <th>Пробег</th>
                <td class="number">{{ car.mileage }}</td>
            </tr>
            <tr>
                <th>Цена полной комплектации</th>
                <td class="number">{{ car.fullPrice }}</td>
            </tr>
            <tr>
                <th>Цена стандартной комплектации</th>
                <td class="number">{{ car.standardPrice }}</td>
            </tr>
            <tr>
                <th>Марка</th>
                <td>{{ car.stamp }}</td>
            </tr>
            <tr>
                <th>Файлы изображения</th>
                <td class="grid-2">
                    {% for image in car.images %}
                        <img alt="" src="{{ image }}" style="max-width: 250px;"/>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}" class="btn btn-light">Вернуться к списку</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-light">Редактировать</a>

    {{ include('admin/car/_delete_form.html.twig') }}
{% endblock %}
