{% extends 'admin/base.html.twig' %}

{% block title %}Список стран{% endblock %}

{% block body %}
    <h1>Список стран</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.name }}</td>
                <td>
                    <a href="{{ path('app_country_edit', {'id': country.id}) }}" class="btn btn-light">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Не найдено стран</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_country_new') }}" class="btn btn-black">Создать</a>
{% endblock %}
