{% extends 'admin/base.html.twig' %}

{% block title %}Модель{% endblock %}

{% block body %}
    <h1>Модель</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ model.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_model_index') }}" class="btn btn-light">Вернуться к списку</a>

    <a href="{{ path('app_model_edit', {'id': model.id}) }}" class="btn btn-light">Редактировать</a>

    {{ include('admin/model/_delete_form.html.twig') }}
{% endblock %}
