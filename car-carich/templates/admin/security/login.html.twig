{% extends 'admin/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Вы вошли под логином {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
        </div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Пожалуйста войдите</h1>
    <label for="inputLogin">Логин</label>
    <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autocomplete="login" required autofocus>
    <label for="inputPassword">Пароль</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    <div class="flex-row mt-2" >
        <button class="btn btn-black" type="submit">
            Вход
        </button>
        <a class="btn btn-light ml-4" href="{{ path('index') }}">
            Вернутся на главную
        </a>
    </div>
</form>
{% endblock %}
