{% extends 'admin/base.html.twig' %}

{% block title %}Список настроек{% endblock %}

{% block body %}
    <h1>Список настроек</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Тип</th>
            <th>Значение</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.typeName }}</td>
                <td>
                    {% if setting.type == 1 %}
                        {% if setting.img %}
                            <a href="{{ setting.img }}" style="color: #1E7EF4">Договор</a>
                        {% endif %}
                    {% else %}
                        <a href="{{ setting.value }}" style="color: #1E7EF4">{{ setting.value }}</a>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_settings_edit', {'id': setting.id}) }}"
                       class="btn btn-light">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Не найдено настроек</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
