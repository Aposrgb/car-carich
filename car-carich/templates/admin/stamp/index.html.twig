{% extends 'admin/base.html.twig' %}

{% block title %}Список марок{% endblock %}

{% block body %}
    <h1>Список марок</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Изображение</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for stamp in stamps %}
            <tr>
                <td>{{ stamp.name }}</td>
                <td>
                    {% if stamp.icon %}
                        <img src="{{ stamp.icon }}" style="max-width: 50px;" alt="">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_stamp_show', {'id': stamp.id}) }}" class="btn btn-light">Посмотреть</a>
                    <a href="{{ path('app_stamp_edit', {'id': stamp.id}) }}" class="btn btn-light">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Не найдено марок</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stamp_new') }}" class="btn btn-black">Создать</a>
{% endblock %}
