{% extends 'admin/base.html.twig' %}

{% block title %}Марка{% endblock %}

{% block body %}
    <h1>Марка</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Название марки</th>
                <td>{{ stamp.name }}</td>
            </tr>
            <tr>
                <th>Изображеине</th>
                <td>
                    {% if stamp.icon %}
                        <img src="{{ stamp.icon }}" style="max-width: 250px;" alt="">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stamp_index') }}" class="btn btn-light">Вернуться к списку</a>

    <a href="{{ path('app_stamp_edit', {'id': stamp.id}) }}" class="btn btn-light">Редактировать</a>

    {{ include('admin/stamp/_delete_form.html.twig') }}
{% endblock %}
