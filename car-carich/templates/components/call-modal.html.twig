{{ component('scripts/call-modal') }}
<div class="fixed modal d-none modal-window">
    <dialog open class="call-modal flex-column font-gotham">
        <div id="call-modal-form" class="mlr-4 mt-4 mb-4">
            <div class="flex-column fs-15 font-500 g-2">
                <label for="name-modal" class="">Ваше имя <span class="required">*</span></label>
                <input
                        required
                        type="text"
                        id="name-modal"
                        placeholder="Иван Иванович"
                        class="input-border"
                />
            </div>
            <div class="flex-column fs-15 font-500 mt-2 g-2">
                <label for="phone-modal" class="">Номер телефона<span class="required">*</span></label>
                <input required
                       type="text"
                       id="phone-modal"
                       placeholder="+7 (___) ___ __-__"
                       class="input-border"
                />
            </div>

            <div class="mt-3 mb-2">
                <button onclick="orderCall('#phone-modal', '#name-modal', '#agree-data-processing')" style="padding: 20px" type="submit"
                        class="btn btn-accent width-100 fs-16 font-500">Заказать звонок
                </button>
            </div>

            <div class="flex-row mt-1 flex-start flex-center">
                <input required type="checkbox" id="agree-data-processing" class="m-0"/>
                <label for="agree-data-processing" class="fs-14 ml-1"><span class="grey">Я согласен</span> с <a href="">политикой
                        обработки персональных данных</a></label>
            </div>
        </div>
    </dialog>
</div>