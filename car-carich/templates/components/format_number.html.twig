<script>
    let formatterNumber = new Intl.NumberFormat('fr-FR');

    function formatAllNumber() {
        let numberClasses = document.getElementsByClassName("number");
        for (let numberClass of numberClasses) {
            numberClass.innerText = formatNumber(numberClass.innerText);
        }
    }

    function formatNumber(el) {
        if (Number.isInteger(tryParseInt(el))) {
            return formatterNumber.format(el);
        }
        return el;
    }

    function tryParseInt(str, defaultValue) {
        let retValue = defaultValue;
        if (str !== null) {
            if (str.length > 0) {
                if (!isNaN(str)) {
                    retValue = parseInt(str);
                }
            }
        }
        return retValue;
    }
</script>