<script>
    function createSlider({id, min, max}) {
        return noUiSlider.create(document.getElementById(id), {
            start: [min, max],
            step: Math.ceil((max + min) / 2 / 100),
            connect: true,
            range: {
                min: min,
                max: max,
            },
        });
    }
</script>