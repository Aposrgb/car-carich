{% extends 'lk/base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('styles/styles.css') }}"/>
    <link rel="stylesheet" href="{{ asset('styles/filters.css') }}"/>
    <link rel="stylesheet" href="{{ asset('styles/card.css') }}"/>
    <link rel="stylesheet" href="{{ asset('libs/owlcarousel/owl.carousel.min.css') }}"/>

    {{ component('car') }}
    {{ component('slider_factory') }}
    <script src="{{ asset('scripts/script.js') }}"></script>
    <script src="{{ asset('scripts/call-modal.js') }}"></script>
    <script src="{{ asset('https://code.jquery.com/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('libs/owlcarousel/owl.carousel.min.js') }}"></script>
    {{ component('owl_carousel', {selectorName: '.pop-cars', classNameNextArrow: 'right-arrow', classNamePrevArrow: 'left-arrow'}) }}
    {{ component('owl_carousel', {selectorName: '.cars-cards', classNameNextArrow: 'card-arrow-right', classNamePrevArrow: 'card-arrow-left', items: 3, margin: 5}) }}
{% endblock %}

{% block body %}
    {{ component('header', {nameHidden: true, isDisplayNone: true}) }}
    <div>
        <div class="block main-block z-1">
            <div class="img-container">
                <img
                        class="block img-block"
                        src="{{ asset('img/main-img.svg') }}"
                />
            </div>
            <div class="block center-block">
                <p class="ibm-font m-0 white main-text">Car-Карыч</p>
                <div class="center-sub-block font-gotham">
                    <p>Импорт автомобилей в РФ. Авто из Кореи,</p>
                    <p>Китая, Японии, Америки и других стран.</p>
                </div>
            </div>
        </div>
        <header class="fs-13 block header header-block white bottom-2 flex-j-center flex-end">
            <a href="{{ path('index') }}">Главная</a>
            <a href="#select-car">Подобрать автомобиль</a>
            <a href="{{ path('catalog') }}">Каталог</a>
            <a href="#">О нас</a>
        </header>
        <div class="block">
            <div class="flex-column">
                <div class="pop-model text-center font-gotham-bold mt-6">
                    Популярные модели
                </div>
                <div class="mt-100 relative">
                    <div class="mt-7 z2 absolute full-width flex-space-between">
                        <img
                                id="left-arrow"
                                src="img/arrow.svg"
                                class="arrow ml-2 transform-mirror"
                        />
                        <img id="right-arrow" src="img/arrow.svg" class="arrow mr-2"/>
                    </div>
                    <div class="pop-cars owl-carousel owl-theme"></div>
                </div>
            </div>
        </div>
        <div class="filters pb-5">
            <div id="select-car" class="flex-column fit-content margin-auto">
                <h2 class="font-gotham-bold mb-4 mt-6">Подобрать автомобиль</h2>
                <div class="flex-column">
                    <ul class="list-style-unset flex-row">
                        <li class="flex-column flex-space-between li-filter">
                            {{ component('filters/country') }}
                        </li>
                        <li class="flex-column flex-space-between ml-4 li-filter">
                            <label for="stamp" class="font-gotham grey">Марка</label>
                            <select id="stamp" class="select-filter filter-underline font-gotham">
                                <option class="font-gotham">Все марки</option>
                            </select>
                        </li>
                        <li class="flex-column flex-space-between ml-4 li-filter">
                            <label for="year" class="font-gotham grey">Год выпуска</label>
                            <select id="year" class="select-filter filter-underline font-gotham">
                                <option class="font-gotham">Все</option>
                            </select>
                        </li>
                        <li class="flex-column flex-space-between ml-4 li-filter">
                            {{ component('filters/multirange') }}
                        </li>
                    </ul>
                    <ul class="list-style-unset flex-row">
                        <li class="flex-column flex-space-between li-filter">
                            <label for="name" class="font-gotham grey">Ваше имя</label>
                            <input
                                    type="text"
                                    id="name"
                                    placeholder="Имя"
                                    class="input-filter filter-underline"
                            />
                        </li>
                        <li class="flex-column flex-space-between ml-4 li-filter">
                            <label for="phone" class="font-gotham grey"
                            >Номер телефона</label
                            >
                            <input
                                    type="phone"
                                    id="phone"
                                    placeholder="+7 (000) 000 00-00"
                                    class="input-filter filter-underline"
                            />
                        </li>
                        <li class="ml-4">
                            <button class="btn btn-black btn-w-large font-gotham" onclick="toggleModal()">
                                Заказать звонок
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="block">
            <div class="flex-row flex-center mt-7">
                <div>
                    <img
                            id="card-arrow-left"
                            src="img/arrow.svg"
                            class="arrow ml-2 transform-mirror"
                    />
                </div>


                <div class="cars-cards flex-row owl-carousel owl-theme over-auto">

                </div>

                <div>
                    <img id="card-arrow-right" src="img/arrow.svg" class="arrow mr-2"/>
                </div>
            </div>
            <div class="flex-j-center mt-4">
                <button class="btn btn-black btn-full font-gotham" onclick="location.href='/catalog'">
                    Смотреть весь каталог
                </button>
            </div>
        </div>
        <div class="last-block flex-column">
            <div class="mlr-auto mt-6 eight-block">
                <h2 class="font-gotham-bold white">Наши преимущества</h2>
                <div class="flex-row">
                    <div class="third-block settings-card mr-2">
                        <div class="flex-j-center mt-4 mb-4">
                            <img src="img/settings.svg" class="seventi-block"/>
                        </div>
                        <h4 class="white font-gotham-bold">Огромный бак</h4>
                        <h6 class="font-gotham white">
                            Самый огромный бак в мире смешариков и кар карычей, которые
                            бесконечно радуют глаз наших клиентов
                        </h6>
                    </div>
                    <div class="third-block settings-card mr-2">
                        <div class="flex-j-center mt-4 mb-4">
                            <img src="img/settings.svg" class="seventi-block"/>
                        </div>
                        <h4 class="white font-gotham-bold">Огромный бак</h4>
                        <h6 class="font-gotham white">
                            Самый огромный бак в мире смешариков и кар карычей, которые
                            бесконечно радуют глаз наших клиентов
                        </h6>
                    </div>
                    <div class="third-block settings-card">
                        <div class="flex-j-center mt-4 mb-4">
                            <img src="img/settings.svg" class="seventi-block"/>
                        </div>
                        <h4 class="white font-gotham-bold">Огромный бак</h4>
                        <h6 class="font-gotham white">
                            Самый огромный бак в мире смешариков и кар карычей, которые
                            бесконечно радуют глаз наших клиентов
                        </h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4 bg-white"></div>
    </div>
{% endblock %}